{
	"manifest_version": 2,
	"name": "Modation",
	"version": "2.1.1",
	
	"applications": {
		"gecko": {
			"id": "modation@plxbt.us"
		}
	},

	"description": "Soundation, amplified.",

	"permissions": [
		"https://*.soundation.com/*",
		"alarms",
		"notifications",
		"storage"
	],

	"background": {
		"page": "background.html",
		"persistent": false
	},
	
	"browser_action": {
		"default_icon": "img/newicon128.png",
		"default_popup": "popup.html"
	},
	
	"content_scripts": [{
		"matches": ["*://*.soundation.com/*"],
		"css": ["css/content.css"],
		"js": [
			"js/content.js"
		]
	}],
	
	"web_accessible_resources": ["content.html"]
}
