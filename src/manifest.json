{
	"manifest_version": 2,
	"name": "Modation Dev",
	"version": "2.0",
	//"version_suffix": "beta",
	"debug": true,

	"description": "Soundation, amplified.",
	"icons": { "16": "img/newicon16.png",
		"19": "img/newicon19.png",
		"48": "img/newicon48.png",
		"128": "img/newicon128.png" },

	"author": "cyberbit",
	"permissions": [
		"https://*.soundation.com/*",
		"alarms",
		"notifications",
		"storage"
	],

	"background": {
		"page": "background.html",
		"persistent": false
	},

	"browser_action": {
		"default_icon": "img/newicon.png",
		"default_popup": "popup.html"
	},
	
	"content_scripts": [{
		"matches": ["https://*.soundation.com/*"],
		"css": ["css/opentip.css", "css/content.css"], //Original source
		/*"css": ["css/opentip.min.css", "css/content.min.css"],*/ //Compiled source
		"js": ["js/jquery.all.js",
			   "js/opentip-jquery.custom.min.js",
			   "js/isotope.pkgd.min.js",
			   "js/jquery.caretposition.custom.js",
			   "js/jquery.sew.min.js",
			   "js/moment.min.js",
			   "js/crapi.js",
			   "js/modapi.js",
			   "js/AprilApril.min.js",
			   "js/content.js"], //Original source
		/*"js": ["js/jquery.all.js", "js/opentip-jquery.custom.min.js", "js/api.min.js", "js/content.min.js"],*/ //Compiled source
		//"run_at": "document_start",
		"all_frames": true
	}],
	
	"web_accessible_resources": [
		"content.html"
	],
	
	"options_page": "newoptions.html",

	"short_name": "Modation"
}
